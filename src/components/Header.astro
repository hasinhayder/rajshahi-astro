<header>
  <nav class="navbar">
    <div class="nav-left">
      <a href="/" class="brand">Rajshahi</a>
    </div>
    <button class="hamburger" aria-label="Open navigation" aria-expanded="false" aria-controls="nav-menu" onclick="toggleNavMenu()">
      <span></span><span></span><span></span>
    </button>
    <div class="nav-right" id="nav-menu">
      <a href="/about">About</a>
      <a href="/blog">Blog</a>
      <a href="/categories">Categories</a>
      <a href="/resources">Resources</a>
      <a href="/gears">Gears</a>
      <a href="/sessions">Sessions</a>
      <a href="/contact">Contact</a>
    </div>
  </nav>
</header>

<style>
  header {
    width: 100%;
    padding: 1.5rem 0 1.2rem 0;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
  }

  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    gap: 0.5rem; /* Add gap between navbar children */
  }

  .nav-left .brand {
    font-family: "Lora", serif;
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--heading-color);
    letter-spacing: 0.01em;
    text-decoration: none;
    opacity: 0.92;
    transition: color 0.2s;
  }

  .nav-right {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    transition:
      right 0.2s,
      opacity 0.2s;
  }

  .nav-right a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.04rem;
    transition: color 0.2s;
    position: relative;
    padding: 2px 0;
  }

  .nav-right a:hover {
    color: var(--link-hover-color);
  }

  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 2.5rem;
    height: 2.5rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1002;
    margin-left: 1rem;
    margin-right: 0; /* Remove right margin to avoid overlap */
  }

  .hamburger span {
    display: block;
    width: 26px;
    height: 3px;
    margin: 4px 0;
    background: var(--accent-color);
    border-radius: 2px;
    transition: all 0.3s;
  }

  @media (max-width: 700px) {
    .navbar {
      align-items: center !important;
      padding-left: 0.7rem;
      padding-right: 0.7rem;
    }
    .nav-left .brand {
      padding-left: 0.5rem;
    }
    .nav-right {
      position: absolute;
      top: 100%;
      right: 1.5rem;
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      flex-direction: column;
      gap: 0.5rem;
      padding: 1.2rem 1.5rem;
      min-width: 160px;
      opacity: 0;
      pointer-events: none;
      z-index: 1001;
      transition:
        opacity 0.2s,
        top 0.2s;
    }
    .nav-right.open {
      opacity: 1;
      pointer-events: auto;
      top: 110%;
    }
    .hamburger {
      display: flex;
    }
    #theme-toggle {
      width: 2rem !important;
      height: 2rem !important;
      font-size: 1.1rem !important;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .navbar {
      align-items: center !important;
    }
  }
</style>
<script is:inline>
  function toggleNavMenu() {
    const nav = document.getElementById("nav-menu")
    const btn = document.querySelector(".hamburger")
    nav.classList.toggle("open")
    const expanded = nav.classList.contains("open")
    btn.setAttribute("aria-expanded", expanded)
  }
  // Optional: close menu on outside click (mobile)
  document.addEventListener("click", function (e) {
    const nav = document.getElementById("nav-menu")
    const btn = document.querySelector(".hamburger")
    if (!nav || !btn) return
    if (window.innerWidth > 700) return
    if (!nav.contains(e.target) && !btn.contains(e.target)) {
      nav.classList.remove("open")
      btn.setAttribute("aria-expanded", "false")
    }
  })
</script>
