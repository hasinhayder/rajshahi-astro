---
import Layout from "../layouts/Layout.astro"
import { getEntry } from "astro:content"

const gearsEntry = await getEntry("site-content", "gears")
const { Content: GearsContent } = await gearsEntry.render()
---

<Layout title="Rajshahi Blog - My Gears">
  <main>
    <GearsContent />
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 3rem auto;
    padding: 0 1.5rem;
    flex-grow: 1;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll("main a").forEach((anchor) => {
      anchor.setAttribute("target", "_blank")
      anchor.setAttribute("rel", "noopener noreferrer")
    })
  })
</script>
